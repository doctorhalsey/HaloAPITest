<UserControl x:Class="HaloAPITest.inimigohalo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HaloAPITest"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="500">
    <Grid>
        <Image Source="{Binding LargeIconImageUrl}" HorizontalAlignment="Left" Height="130" Margin="10,10,0,0" VerticalAlignment="Top" Width="123"/>
        <TextBlock Margin="150,10,10,0" TextWrapping="Wrap" Text="{Binding Name}" Height="35" VerticalAlignment="Top"/>
        <TextBlock Margin="150,70,10,10" TextWrapping="Wrap" Text="{Binding Description}"/>
    </Grid>
</UserControl>
